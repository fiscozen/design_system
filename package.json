{
  "name": "@fiscozen/design_system",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "nx run-many --target=test:unit",
    "test:unit": "nx run-many --target=test:unit",
    "test:coverage": "nx run-many --target=test:unit -- --coverage",
    "test:affected": "nx affected -t test:unit",
    "build": "nx run-many --target=build",
    "storybook": "nx run @fiscozen/storybook:storybook",
    "generate:component": "plop component",
    "argdown:help": "argdown --help",
    "argdown:generate": "pnpm argdown:generate:html && pnpm argdown:generate:svg",
    "argdown:generate:html": "argdown html docs/argdown/* docs/export/",
    "argdown:generate:svg": "argdown map docs/argdown/* docs/export/",
    "test:storybook": "cd apps/storybook && pnpm test:storybook",
    "test:storybook:watch": "cd apps/storybook && pnpm test:storybook:watch",
    "test:storybook:coverage": "cd apps/storybook && pnpm test:storybook:coverage",
    "test:storybook:ui": "cd apps/storybook && pnpm test:storybook --ui",
    "prepare": "husky"
  },
  "engines": {
    "pnpm": "^10",
    "node": "^22.12.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@argdown/cli": "^1.7.5",
    "husky": "^9.1.7",
    "nx": "20.7.1",
    "plop": "^4.0.1",
    "vitest": "^1.0.4"
  },
  "pnpm": {
    "overrides": {
      "glob": "^11.1.0",
      "@argdown/node>glob": "^7.2.0"
    },
    "patchedDependencies": {
      "@argdown/node@1.7.5": "patches/@argdown__node@1.7.5.patch"
    }
  }
}
